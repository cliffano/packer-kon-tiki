{
  "variables": {
    "version": "x.x.x"    
  },
  "builders": [
    {
      "type": "docker",
      "image": "centos:centos7",
      "commit": true,
      "run_command": [
        "--privileged", "-e", "container=docker", "-v", "/sys/fs/cgroup:/sys/fs/cgroup",
        "-d", "-i", "-t", "{{.Image}}", "/bin/bash"
      ],
      "changes": [
        "ENV LANG en_US.UTF-8",
        "ENV LC_ALL en_US.UTF-8",
        "ENV PATH /usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin",
        "ENV KONTIKI_CFG ../../config/studio/kon-tiki/"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "provisioners/puppet.sh"
    },
    {
      "type": "puppet-masterless",
      "prevent_sudo": true,
      "puppet_bin_dir": "/opt/puppetlabs/bin/",
      "extra_arguments": "--debug",
      "staging_directory": "/tmp/kon-tiki/",
      "manifest_file": "provisioners/kon-tiki.pp",
      "module_paths": [
        "modules"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "ghcr.io/cliffano/kon-tiki",
      "tag": "latest",
      "only": [
        "docker"
      ]
    },
    {
      "type": "docker-tag",
      "repository": "ghcr.io/cliffano/kon-tiki",
      "tag": "{{user `version`}}",
      "only": [
        "docker"
      ]
    }
  ]
}
