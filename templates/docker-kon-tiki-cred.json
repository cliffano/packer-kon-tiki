{
  "variables": {
  },
  "builders": [
    {
      "type": "docker",
      "image": "cliffano/kon-tiki",
      "commit": true,
      "run_command": [
        "--privileged", "-e", "container=docker", "-v", "/sys/fs/cgroup:/sys/fs/cgroup",
        "-d", "-i", "-t", "{{.Image}}", "/bin/bash"
      ],
      "changes": [
        "ENV LANG en_US.UTF-8",
        "ENV PATH /usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin",
        "ENV KONTIKI_CFG ../../config/studio/kon-tiki/"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "puppet-masterless",
      "prevent_sudo": true,
      "puppet_bin_dir": "/opt/puppetlabs/bin/",
      "hiera_config_path": "conf/hiera.yaml",
      "extra_arguments": "--debug",
      "staging_directory": "/tmp/kon-tiki/",
      "manifest_file": "provisioners/kon-tiki-cred.pp",
      "module_paths": [
        "modules",
        "modules-extra"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "cliffano/kon-tiki-cred",
      "tag": "latest",
      "only": [
        "docker"
      ]
    }
  ]
}
